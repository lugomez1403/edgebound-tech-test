<div class="container">
    <div class="row">
        <div class="col-lg-3 col-md-2"></div>
        <div class="col-lg-6 col-md-8 login-box">
            <div class="col-lg-12 login-title">
                Edit Order
            </div>

            <div class="col-lg-12 card-form">
                <div class="col-lg-12 card-form">
                    <form action="/orders/edit-orders/{{ order._id }}?_method=PUT" method="POST">
                    <input type="hidden" name="_method" value="PUT">
                        <div class="form-group">
                            <input type="text" name="title" class="form-control" placeholder="Title" autofocus value="{{ order.title }}" />
                        </div>
                        <div class="form-group">
                            <textarea type="text" name="description" class="form-control"
                                placeholder="Description">{{ order.description }}</textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-outline-primary" type="submit">
                                Edit
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>