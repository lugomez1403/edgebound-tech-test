<div class="container">
    <div class="row">
        <div class="col-lg-3 col-md-2"></div>
        <div class="col-lg-6 col-md-8 login-box">
            <div class="col-lg-12 login-title">
                Change Status
            </div>
            <div class="col-lg-12 card-form">
                <div class="col-lg-12 card-form">
                    <form action="/orders/change-status/{{ order._id }}?_method=PUT" method="POST">
                        <input type="hidden" name="_method" value="PUT">
                        <div class="form-group p-4">
                            <label class="form-control-label">SELECT STATUS</label>
                            <select name="status" class="select form-select" aria-label="Default select example">
                                    <option value="">Choose option</option>
                                    {{#compare order.status '==' 'PROCESS'}}
                                    <option value="CANCELLED">CANCELLED</option>
                                    <option value="PICKING">PICKING</option>
                                    {{/compare}}
                                    {{#compare order.status '==' 'PICKING'}}
                                    <option value="SHIPPING">SHIPPING</option>
                                    {{/compare}}
                                    {{#compare order.status '==' 'SHIPPING'}}
                                    <option value="CLOSED">CLOSED</option>
                                    {{/compare}}
                            </select>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-outline-primary" type="submit">
                                Edit
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>